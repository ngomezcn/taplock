<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".buy_ekeys.Buy_eKeys">

    <LinearLayout
        android:id="@+id/layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:onClick="go_back"
                android:id="@+id/cancel_add_itap"
                android:background="@drawable/ripple_effect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_back"
                android:drawablePadding="1sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="#FF6464"
                android:textStyle="bold"
                android:textSize="16dp"
                android:lineHeight="500dp"
                android:letterSpacing="0.05"
                android:drawableLeft="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#3E5481"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="500dp"
                    android:letterSpacing="0.05"
                    android:gravity="right"

                    android:text="1/1"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#9FA5C0"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="500dp"
                    android:letterSpacing="0.05"
                    android:gravity="right"
                    android:text="2"/>-->

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="32sp"
            android:paddingTop="10dp"
            android:text="Comprar eKeys"
            android:textAlignment="center"
            android:textColor="#2E3E5C"
            android:textFontWeight="700"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/inter"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="25sp"
            android:paddingBottom="25dp"

            android:text="Debe seleccionar la cantidad"
            android:textAlignment="center"
            android:textColor="#9FA5C0"
            android:textFontWeight="600"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:onClick="substract_amount"
                android:textColor="#2E3E5C"
                android:background="@drawable/ripple_effect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="1sp"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:textSize="16dp"
                android:lineHeight="500dp"
                android:letterSpacing="0.05"
                android:drawableLeft="@drawable/ic_arrow_left"/>

            <EditText
                android:id="@+id/editable_amount"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/tap_pin_code"
                android:fontFamily="@font/inter"
                android:inputType="number"
                android:onClick="edit_amount"
                android:lineHeight="18sp"
                android:textFontWeight="500"
                android:textSize="15sp"
                android:hint="1"
                android:textColor="@color/black"/>

            <TextView
                android:onClick="add_amount"
                android:textColor="#2E3E5C"
                android:background="@drawable/ripple_effect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="1sp"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:textSize="16dp"
                android:lineHeight="500dp"
                android:letterSpacing="0.05"
                android:drawableRight="@drawable/ic_arrow_right" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:gravity="left"
            android:lineHeight="17sp"
            android:paddingTop="6dp"
            android:paddingRight="24dp"
            android:text="(Se puede introducir la cantidad por teclado)"
            android:textColor="#2E3E5C"
            android:textFontWeight="600"
            android:paddingBottom="12dp"
            android:textSize="11sp"
            android:textStyle="bold"/>
        <View
            android:id="@+id/hide_03"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:id="@+id/hide_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/itaps_bd"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Información del pago"
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Nombre iTap: "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Dirección iTap: "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Unidades (eKeys): "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Precio por unidad: "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/individual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="€"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Subtotal: "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="€"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="IVA (21%): "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/iva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13.4dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="€"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="Gastos de gestión (1,4%): "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13.4dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="€"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="PRECIO FINAL: "
                    android:textColor="#2a3d66"
                    android:textFontWeight="700"
                    android:textSize="13.2dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="-"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13.4dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="left"
                    android:letterSpacing="0.02"
                    android:lineHeight="32sp"
                    android:text="€"
                    android:textColor="#4c9173"
                    android:textFontWeight="700"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/extra_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:padding="15dp"
            android:lineHeight="17sp"
            android:paddingTop="6dp"
            android:text="Se enviará un correo a su email con todos los pasos para realizar el pago. (naimgomeznc@gmail.com)"
            android:textColor="#2E3E5C"
            android:textFontWeight="600"
            android:paddingBottom="12dp"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@android:color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_step"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continuar"
            android:textColor="@color/white"
            android:background="@drawable/ripple_effect_raised"/>

        <!--android:backgroundTint="#1FCC79"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:lineHeight="25sp"

                android:text="¿Tienes dudas?"
                android:textAlignment="center"
                android:textColor="#2E3E5C"
                android:textFontWeight="600"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:fontFamily="@font/inter_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:lineHeight="25sp"

                android:text="Contacta con nosotros"
                android:textAlignment="center"
                android:textColor="#1FCC79"
                android:textFontWeight="600"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout

        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loading"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</RelativeLayout>